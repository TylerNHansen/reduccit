<h1>placeholder for posts form</h1>

<form action="<%= new_post ? posts_url : post_url(post) %>"
  method="post" accept-charset="utf-8">
  <%= form_auth_html %>
  <%= update_method_html unless new_post %>

  <label for="title">Title</label><input type="text" name="post[title]" value="<%= post.title %>" id="title">
  <label for="url">url</label><input type="text" name="post[url]" value="<%= post.url %>" id="url">


<label for="body">Body</label><textarea name="post[body]" rows="8" cols="40" id="body" value="<%= post.body %>"></textarea>


  <p><input type="submit" value="Submit Post"></p>
</form>